<?xml version="1.0" encoding="utf-8"?>
    <resources>
        <!-- Tema Claro -->
        <style name="Theme.FalouComprouCerto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Cor da Barra de Ação -->
            <item name="colorPrimary">@color/colorAccent</item>
            <item name="colorPrimaryVariant">@color/colorAccent2</item>
            <item name="colorOnPrimary">@color/white</item>

            <!-- Fundo da Janela -->
            <item name="android:windowBackground">@drawable/background_gradient</item>
        </style>

        <!-- Tema Escuro (opcional) -->
        <style name="Theme.NomeDoSeuApp.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Defina cores específicas para o tema escuro -->
            <item name="colorPrimary">@color/black</item>
            <item name="colorPrimaryVariant">@color/black</item>
            <item name="colorOnPrimary">@color/white</item>

            <!-- Fundo da Janela para o tema escuro -->
            <item name="android:windowBackground">@drawable/background_gradient</item>
        </style>
    </resources>

